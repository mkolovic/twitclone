<!-- views/tweets.ejs -->
<!DOCTYPE html>
<html>
  <head>

    <link rel="stylesheet" type="text/css" href="css/site.css">
  </head>
  <body>
    <header></header>
    <main>
      <h1>Twitter Clone Course</h1>
      <form id="tweet-form" action="/tweets/create" method="POST">
        <input id="tweet-form-handle" name="handle" type="text" placeholder="Handle, Please.">
        <textarea id="tweet-form-body" name="body" placeholder="What's up?"></textarea>
        <button id="tweet-form-button">Tweet</button>
      </form>
      <% for(var i = 0; i < tweets.length; i++) { %>
        <%- include('_tweet', { tweet: tweets[i] }); %>
      <% } %>
    </main>
  </body>
</html>
