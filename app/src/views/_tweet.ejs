<!-- views/_tweet.ejs -->
<article class="tweet">
  <p>
    <a href="https://twitter.com/<%= tweet.handle %>">@<%= tweet.handle %></a>
    <span class="light-grey"> - <%= tweet.time_from_now %></span>
  </p>
  <p><%= tweet.body %></p>
  <% if (tweet.isEditable) { %>
    <p><a href="/tweets/<%= tweet.id %>/edit">Edit</a></p>
  <% } %>
</article>
